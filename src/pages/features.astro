---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FeaturesComponent from "../components/Features.astro";
import ScrollReveal from "../components/ScrollReveal.tsx";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={`Features | ${SITE.title}`}
  description="Discover all the features included in Astro Base: React, Framer Motion, Tailwind CSS, Astro Icons, Sass, MDX, and more."
  canonicalURL={`${SITE.url}/features`}
>
  <Header />
  <main id="main-content" role="main">
    <section class="max-w-6xl mx-auto px-4 py-20">
      <ScrollReveal client:idle>
        <h1 class="text-5xl font-bold text-gray-900 mb-4">Features</h1>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.1}>
        <p class="text-xl text-gray-600 mb-12">
          Everything you need to build modern web experiences.
        </p>
      </ScrollReveal>
      <FeaturesComponent />
    </section>
  </main>
  <Footer />
</Layout>
