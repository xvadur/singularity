---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/ContactForm.astro";
import ScrollReveal from "../components/ScrollReveal.tsx";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={`Contact | ${SITE.title}`}
  description="Get in touch with us. We'd love to hear from you about Astro Base or any questions you may have."
  canonicalURL={`${SITE.url}/contact`}
>
  <Header />
  <main id="main-content" role="main">
    <section class="max-w-2xl mx-auto px-4 py-20">
      <ScrollReveal client:idle>
        <h1 class="text-5xl font-bold text-gray-900 mb-4">Contact</h1>
      </ScrollReveal>
      <ScrollReveal client:idle delay={0.2}>
        <p class="text-xl text-gray-600 mb-12">Get in touch with us. We'd love to hear from you.</p>
      </ScrollReveal>
      
      <ScrollReveal client:idle delay={0.3}>
        <ContactForm />
      </ScrollReveal>
    </section>
  </main>
  <Footer />
</Layout>

